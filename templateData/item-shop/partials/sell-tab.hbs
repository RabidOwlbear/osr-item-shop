<section class="list-header sell">
  <div class="item item-template-b">
    <p>{{localize "OSRIS.itemShop.name"}}</p>
    <p>{{localize "OSRIS.itemShop.cost"}}</p>
    <p>{{localize "OSRIS.itemShop.sell"}}</p>
  </div>
</section>
<section class="item-list">
  <div class="cat-header">{{localize "OSRIS.itemShop.weapons"}}</div>
  {{#each custItems.weapons as |item idx|}}
    <div class="item-row">
      <div 
      class="item item-template-b"
      data-type="{{item.type}}"
      data-cost="{{item.system.cost}}"
      data-id="{{item.id}}"
      >
        <p>{{item.name}}</p>
        <p>{{item.system.cost}}</p>
        <input 
        type="checkbox" 
        class="sell-check"
        data-item-id="{{item.id}}"
        data-item-type="{{item.type}}"
        >                
      </div>
    </div>
  {{/each}}
  <div class="cat-header ch-marg-top">{{localize "OSRIS.itemShop.armor"}}</div>
  {{#each custItems.armor as |item idx|}}
    <div class="item-row">
      <div 
      class="item item-template-b"
      data-type="{{item.type}}"
      data-cost="{{item.system.cost}}"
      data-id="{{item.id}}"
      >
        <p>{{item.name}}</p>
        <p>{{item.system.cost}}</p>
        <input 
        type="checkbox" 
        class="sell-check"
        data-item-id="{{item.id}}"
        data-item-type="{{item.type}}"
        >                
      </div>
    </div>
  {{/each}}
  <div class="cat-header ch-marg-top">{{localize "OSRIS.itemShop.items"}}</div>
  {{#each custItems.items as |item idx|}}
    <div class="item-row">
      <div 
      class="item item-template-b"
      data-type="{{item.type}}"
      data-cost="{{item.system.cost}}"
      data-id="{{item.id}}"
      >
        <p>{{item.name}}</p>
        <p>{{item.system.cost}}</p>
        <input 
        type="checkbox" 
        class="sell-check"
        data-item-id="{{item.id}}"
        data-item-type="{{item.type}}"
        >                
      </div>
    </div>
  {{/each}}
  
</section>
<div class='sell-footer'>
    <div class='sell-total'>
      <label><b>{{localize "OSRIS.itemShop.saleTotal"}}</b>:</label>
      <input id="sell-total" type='text' data-dtype='Number' value='0' placeholder='0' disabled />
    </div>
    <a id="sell-btn">{{localize "OSRIS.itemShop.sellItems"}}</a>
  </div>